{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["dom", "es5", "scripthost", "es2015"],
    "jsx": "react",
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "./node_modules/@typeless/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
    "./test/**/*.ts",
    "./test/**/*.tsx",
    "./test/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
